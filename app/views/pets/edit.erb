<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet name:</label>

  <br>

  <input type="text" name="pet[name]" value="<%= @pet.name %>">

  <br>

  <h3><p>Change the owner for your pet</p></h3>
  <%@owners.each do |owner|%>
      <input type="radio" <%='checked' if owner.id == @pet.owner_id%> name="pet[owner_id]" value="<%=owner.id%>" id="<%owner.id%>"><%=owner.name%><br>
  <%end%>
  <br><br>
  <br>
  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
  <input type="text" name="owner[name]">
  <br>

  <input type="submit" value="Update Pet">
</form>
